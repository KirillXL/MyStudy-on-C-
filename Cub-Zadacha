#include <iostream>;

using namespace std;

int main() {
	setlocale(LC_ALL, "ru");
	float a, b, cub1, vurez, otvet;
	cout << "Здравствуйте.Это программа по нахождению объема фигуры с вырезанной частью." << endl;
	cout << "Введите сторону куба(больше нуля): ";
	cin >> a;
	cout << "Введите сторону треугольника, который будет вырезан(больше нуля): ";
	cin >> b;
	if (0 < a && 0 < b) {
		cub1 = a * a * a;
		vurez = 3 * ((sqrt(3) / 4) * pow(b, 2) * a) - (2 * pow(b, 3));
		if (0 < (cub1 - vurez)&& 0<vurez) {
			otvet = cub1 - vurez;
			cout << "Объем фигуры равен:  " << otvet;
		}
		else {
			cout << "В процессе вычислений, какая-то переменная приняла отрицательное значение."<< endl;
			cout << "Числа в геометрических фигурах не могут быть отрицательными, поэтому программа была остановлена." << endl;
			cout << "Перезапустите программу";
		}
	}
	else {
		cout << "Значения, которые вы ввели, не соответствуют требованиям программы.Перезапустите программу";
	}
}
